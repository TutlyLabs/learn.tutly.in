---
import RootLayout from "@layouts/RootLayout.astro";
import TemplateSelector from "./_components/TemplateSelector";
---

<RootLayout title="Playground" hideSidebar hideHeader className="p-1">
  <main class="container mx-auto p-4">
    <h1 class="text-4xl font-bold mb-8">Cloud Development Environment</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-background rounded-lg shadow p-6">
        <h2 class="text-2xl font-semibold mb-4">Start New Environment</h2>
        <TemplateSelector client:load />
      </div>
      
      <div class="bg-background rounded-lg shadow p-6">
        <h2 class="text-2xl font-semibold mb-4">Active Environments</h2>
        <div id="environments" class="space-y-4">
          <!-- Active environments will be rendered here -->
        </div>
      </div>
    </div>

</RootLayout>

