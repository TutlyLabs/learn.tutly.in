---
import RootLayout from "@layouts/RootLayout.astro";
import Page from "./page";
import { createServerCaller } from "@/trpc/server";

const caller = await createServerCaller(Astro.request);
const { courses, assignments } = await caller.assignments.getAssignmentsPageData();
---

<RootLayout title="Assignments">
  <Page courses={courses} assignments={assignments} client:only="react" />
</RootLayout>
